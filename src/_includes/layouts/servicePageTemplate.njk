{% extends "layouts/base.njk" %}

{% block content %}

<!-- Hero Section -->
{% include "components/shared/heroSection.njk" %}


<!-- Service body  -->
<section class="mx-auto  px-4 md:px-14 py-16  lg:flex lg:space-x-8 ">
    <!-- Blog Content -->
    <div class="w-full lg:w-2/3  rounded-lg p-6 ">

        <!-- <p class="text-[var(--textGray)] mt-2">Published on April 20, 2024 by John Doe</p> -->
        <img src="{{img}}" alt="{{title}}" class="w-full h-96 mb-4 rounded-lg object-cover">
        <h2 class="text-3xl font-bold text-[var(--colorDark)]">{{ title }}</h2>

        {{ content | safe }}

        <!-- Accordination -->
        {% include "components/shared/accordion.njk" %}
    </div>

    <!-- Sidebar -->
    <aside class="w-full lg:w-1/3 mt-8 lg:mt-0">
        
        <div class="bg-[var(--colorWhite)] shadow-lg rounded-lg p-6 mt-6">
            <h3 class="text-xl font-bold text-[var(--colorDark)]">Services</h3>
            <hr class="h-[.3rem] bg-[var(--primaryColor)] rounded-full mt-3 mb-5" />
            <ul class="mt-4 space-y-2">
                {% for service in collections.services %}
                    <li><a href="{{ service.url }}" class="text-[var(--primaryColor)] hover:underline">{{
                        service.data.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
        

        {% include "components/shared/callUs.njk" %} 
    </aside>
</section>

{% endblock %}




