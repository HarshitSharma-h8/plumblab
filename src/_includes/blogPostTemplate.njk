---
layout : 'base.njk'

heroImgSrc: "/assets/about.jpg"
heroImgAlt: "HomePageHeroImg"
eleventyComputed:
  heroTitle: "{{ title }}"
---

<!-- hero section -->
{% include "_layouts/heroSection.njk" %}


<!-- Main Content -->
<div id="blogPost" class="mx-auto  px-4 md:px-14 py-16  lg:flex lg:space-x-8 ">
    <!-- Blog Content -->
    <article class="w-full lg:w-2/3 bg-[var(--colorWhite2)] shadow-lg rounded-lg p-6 ">
        {# <h3 class="text-3xl font-bold text-[var(--colorDark)]">{{ title }}</h2> #}
            <div class="flex gap-4 items-center mb-4">
                <p class="text-[var(--textGray)]"><i class="fa-regular fa-user text-[var(--primaryColor)]"></i>
                    {{author}}</p>
                <p class="text-[var(--textGray)]"><i class="fa-regular fa-clock text-[var(--primaryColor)]"></i> {{date
                    }}</p>
            </div>
            <img src="{{img}}" alt="{{title}}" class="w-full h-96 mt-4 rounded-lg object-cover">
            <div class="mt-6">
                {{ content | markdown | safe }}
            </div>

            <!-- Comments Section -->
