<!-- Accordination Section -->
<section class="  py-16 ">
    <div class="mb-10">
        <h2 class=" text-4xl mb-3 text-[var(--darkBlue)] font-bold">Frequently Asked <span
            class="text-[var(--primaryColor)]">Questions</span></h2>
    </div>
    <div class="space-y-4 ">
    {% for accordionItem in accordionItems %}
        <div class="border-l-[.2rem] border-[var(--primaryColor)] rounded shadow-md">
        <button 
            class="w-full flex justify-between items-center p-4 bg-white text-left text-lg font-semibold text-[var(--colorDark)] focus:outline-none"
            onclick="toggleAccordion('{{ loop.index }}')">
            {{ accordionItem.title }}
            <span id="icon-1" class="transform transition-transform rotate-180 hover:text-[var(--primaryColor)]  duration-300 ease-in-out">
                <i class="fa-solid fa-chevron-up"></i>
            </span>
        </button>
        <hr>
        <div id="content-{{ loop.index }}" class="max-h-0 overflow-hidden transition-all duration-500 ease-in-out px-4">
            <div class="p-4 bg-white text-[var(--textGray)]">
            {{ accordionItem.content }}
            </div>
        </div>
        </div>
    {% endfor %}
    </div>
</section>